{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "outDir": "build",
    "importHelpers": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "pretty": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "declaration": true,
    "lib": ["es5", "es6", "dom"],
    "typeRoots": ["node_modules/@types", "node_modules/@resin.io"],
    "skipLibCheck": true
  },
  "include": ["lib/**/*.ts"]
}
